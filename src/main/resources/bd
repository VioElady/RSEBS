create database shopmee;
create table customer
(
    id       bigserial not null
        constraint customer_pkey
            primary key,
    email    varchar(255),
    password varchar(255),
    username varchar(255)
        constraint uk_irnrrncatp2fvw52vp45j7rlw
            unique
);

alter table customer
    owner to postgres;



create table products
(
    id          bigint not null
        constraint products_pkey
            primary key,
    description varchar(255),
    price       double precision,
    title       varchar(255),
    customer_id bigint
        constraint fksu77w85kis17ny28x5pli9mvn
            references customer
);

alter table products
    owner to postgres;


create table assessments
(
    likes       boolean,
    customer_id bigint not null
        constraint fkllrc9pbu8imuensd1ppwem37j
            references customer,
    product_id  bigint not null
        constraint fk1fijxgtya4u4wybwfby9lphl7
            references products,
    constraint assessments_pkey
        primary key (customer_id, product_id)
);

alter table assessments
    owner to postgres;


